package Exercise2point3;

public class Main {

	public static void main(String[] args) {
		Sheep farmOne = new Sheep();
		Sheep farmTwo = new Sheep();
		Sheep farmThree = new Sheep();
		Sheep farmFour = new Sheep();
		
		System.out.println("Farm 1");	
		farmOne.printDetails("Malaysia", "Dorpet");
		farmOne.printHeight();
		farmOne.printSold();
		farmOne.tax(0.13);
		
		System.out.println("Farm 2");	
		farmTwo.printDetails("New Zealand", "Romney");
		farmTwo.printHeight();
		farmTwo.printSold();
		farmTwo.tax(0.25);
		
		System.out.println("Farm 3");	
		farmThree.printDetails("China", "Altay");
		farmThree.printHeight();
		farmThree.printSold();
		farmThree.tax(0.20);
		
		System.out.println("Farm 4");	
		farmFour.printDetails("Australia", "Merino");
		farmFour.printHeight();
		farmFour.printSold();
		farmFour.tax(0.30);
	}
}
